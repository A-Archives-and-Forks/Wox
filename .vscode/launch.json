    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Go",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/Wox",
            "env": {
                "CGO_ENABLED": "1"
            }
        },
        {
            "name": "Run Flutter",
            "cwd": "Wox.UI.Flutter/wox",
            "request": "launch",
            "type": "dart",
            // "flutterMode": "release"
        }
    ],
    "compounds": [
        {
            "name": "Run Wox",
            "configurations": ["Run Go", "Run Flutter"],
            "stopAll": true
        }
    ]
}